    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "msw": "^0.44.2",
    "prettier": "^2.7.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vitest": "^0.20.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .tsx,.ts --ignore .eslintignore",
    "lint:fix": "eslint src/* --fix --ignore-path .eslintignore",
    "prettier": "npx prettier src -check",
    "prettier:fix": "npx run prettier -- --write",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn run lint:fix"
    ]
  }
}
